<div class="page-header">
  <h1>Editing Car #<%= @car.id %></h1>
</div>

<%= form_tag(car_url(@car), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :screen_name, @car.user.full_name), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :year, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :year, @car.year, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :make, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :make, @car.make, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :model, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :model, @car.model, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :modification_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :modification_id, @car.modification_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Car", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
