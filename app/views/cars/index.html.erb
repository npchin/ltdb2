<div class="page-header">
  <h1>Cars</h1>
</div>

<p><%= link_to 'Add a New Car', new_car_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Modification</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.user.screen_name %></td>
        <td><%= car.year %></td>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.modification_id %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, car_url(car), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_car_url(car), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, car_url(car), method: 'delete', data: { confirm: "Do you really want to delete this car?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

