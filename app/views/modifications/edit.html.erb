      <%= text_field_tag :safety, @modification.safety, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Modification", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
