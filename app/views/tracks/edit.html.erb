<div class="page-header">
  <h1>Editing Track #<%= @track.id %></h1>
</div>

<%= form_tag(track_url(@track), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :track_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :track_name, @track.track_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Track", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
