<div class="page-header">
  <h1>Editing Lap #<%= @lap.id %></h1>
</div>

<%= form_tag(lap_url(@lap), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, @lap.user_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :modification_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :modification_id, @lap.modification_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :lap_date, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :lap_date, @lap.lap_date, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :track_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :track_id, @lap.track_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :lap_time, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :lap_time, @lap.lap_time, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :video_link, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :video_link, @lap.video_link, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :data_file, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :data_file, @lap.data_file, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Lap", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
